                                            <ComboBoxItem Content="OPCUA"/>
                                            <ComboBoxItem Content="HSSB"/>
                                            <ComboBoxItem Content="MyHMI"/>
                                            <ComboBoxItem Content="MTConnect"/>
                                        </ComboBox>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ncVersionCode :" Width="100"/>
